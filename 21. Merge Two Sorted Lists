/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) {
        if(!list1 && !list2)    return list1;
        if(!list1)  return list2;
        if(!list2)  return list1;
        ListNode *l1 = list1,*l2 = list2,*list3 = new ListNode(0);
        ListNode *temp = list3;
        while(l1 && l2){
            if(l1->val < l2->val){
                temp->next = l1;
                temp = l1;
                l1 = l1->next;
            }
            else{
                temp->next = l2;
                temp = l2;
                l2 = l2->next;
            }
        }
        if(!l1){
            temp->next = l2;
            temp = l2;
        }
        if(!l2){
            temp->next = l1;
            temp = l1;
        }
        return list3->next;
    }
};
