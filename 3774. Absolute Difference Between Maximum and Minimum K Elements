class Solution {
public:
    int absDifference(vector<int>& nums, int k) {
        sort(nums.begin(),nums.end());
        int n = nums.size()-1;
        int min = 0,max = 0;
        for(int i = 0;i<k;i++){
            min += nums[i];
            max += nums[n-i];
        }
        return abs(max - min);
    }
};

