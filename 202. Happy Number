class Solution {
public:
    bool isHappy(int n) {
        unordered_set<int>res;
        while(true){
            int sum = 0;
            while(n > 0){
                int rem = n % 10;
                sum += rem * rem;
                n /= 10;
            }
        if(sum == 1)    return true;
        if(res.find(sum) != res.end()) return false;
        else{
            res.insert(sum);
            n = sum;
        }
        }
        return true;
    }
};


