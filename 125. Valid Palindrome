class Solution {
public:
    bool isPalindrome(string s) {
        int i = 0,j = s.size() -1;
        while(i<j){
            while(i<j && !isalnum(s[i])) i++;
            while(i<j && !isalnum(s[j])) j--;
            if(tolower(s[i]) != tolower(s[j]))  return false;
            i++;
            j--;
        }
        return true;
    }
}; 
Approach : Two Pointers
// first point the i at the starting of the string
// then point the j at the ending of the string
// then i will move continuously until it reaches the alphanumeric character
// repeat the same for j in opposite direction
// then check char of i and char of j equal if not then return false otherwinse continue
// then increment i and decrement j
// you have to repeat this process until the i cross j
// if false was never return in the loop then it must be a palindrome
