class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        vector<int>hash(256,0);
        int n = s.size();
        int l=0,r=0;
        int maxlen = 0;
        while(r<n){
            hash[s[r]]++;
            while(hash[s[r]]>1){
                hash[s[l]]--;
                l++;
            }
            int len = r - l + 1;
            maxlen = max(maxlen,len);
            r++;
        }
        return maxlen;
    }
};
