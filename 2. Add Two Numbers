/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
        int carry = 0;
        ListNode* head = nullptr,*tail = nullptr;
        while(l1 || l2 || carry){
            int sum = carry;
            sum += (l1 != nullptr)?l1 -> val : 0;
            sum += (l2 != nullptr)?l2 -> val : 0;
            if(l1 != nullptr) l1 = l1 -> next;
            if(l2 != nullptr) l2 = l2 -> next;
            int rem = sum%10;
            carry = sum/10;
            ListNode *temp = new ListNode(rem);
            if(head == nullptr)
                head = tail = temp;
            else{
                tail->next = temp;
                tail = temp;
            }
        }
        return head;
    }
};
// first i will assign the carry to the sum (To check if any carry generated during adding the number eg 9,9)
// then add the number of the list1 and list2 and i will to continue untill no l1 and l2 reaches NULL and carry to 0
// then i will find the mod of sum to get the last digit and store it in a new list
// then i will divide the sum to get the carry and this process to be repeated untill the l1 and l2 reaches null
