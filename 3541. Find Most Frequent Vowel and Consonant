class Solution {
public:
    int maxFreqSum(string s) {
        int VowelCnt = 0,ConstCnt = 0;
        unordered_map<char,int>mp;
        for(auto &i : s)
            mp[i]++;
        for(auto i = mp.begin(); i!= mp.end() ; i++){
            if(i->first == 'a' || i->first == 'e' || i->first == 'i' || i->first == 'o' || i->first == 'u')
                VowelCnt = max(VowelCnt,i->second);
            else
                ConstCnt = max(ConstCnt,i->second);
        }
        return VowelCnt+ConstCnt;
    }
};
