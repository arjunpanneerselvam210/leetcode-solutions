class Solution {
public:
    string addBinary(string a, string b) {
      int i = a.size() -1;
      int j = b.size() -1;
      string res = "";
      int carry = 0;
      while( i >= 0 || j >= 0 || carry){
        int sum = carry;
        if(i >= 0)  sum+=a[i--] - '0';
        if(j >= 0)  sum+=b[j--] - '0';
        res+=(sum%2) + '0';
        carry = sum/2;
      }
      reverse(res.begin(),res.end());
      return res;
    }
};
// logic : sum =  carry + a[i} + b[j]   --> sum range must be upto 3
// the modulo of sum with 2 must be either 1 or 2 so add it to the result string
// then carry must be calcluated so carry = sum / 2 then reverse the string and return it
