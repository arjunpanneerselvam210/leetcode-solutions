class Solution {
public:
    int searchInsert(vector<int>& nums, int target) {
        if( target <nums[0]) return 0;
        int n = nums.size()-1;
        if(target > nums[n]) return n+1;
        int low = 0;
        int high = n;
        while(low <= high){
            int mid =(low+high)/2;
            if(nums[mid] == target)
                return mid;
            else if(nums[mid] > target)
                high = mid -1;
            else
                low = mid + 1;
        }
        return low;
    }
};
